<h2>New Article</h2>

<%#= form_for :article, url: '/articles' do |f| %>
<%= form_for :article, url: articles_path do |f| %>
<%#= form_for([ @user, @user.articles.build ])do |f| %>
	<p>
	   <% if @article && @article.errors.any? %>
	
		<ul>
           <% @article.errors.full_messages.each do |err| %>
              <li style="color: red;"><%= err %></li>
              <% end %>  
   		</ul>
   	<% end %>  
   	 </p>
	<p>
	   <%=f.label :title %><br/>
	   <%=f.text_field :title %><br/>
	</p>
	<p>
	   <%=f.label :text %><br/>
	   <%=f.text_area :text %>
	</p>
	<span><%=f.hidden_field :userid, :value => current_user.id.to_i %></span>
	<p>
	   <%=f.submit class: "button btn-lg btn-success" %>
	</p>

<% end %>


