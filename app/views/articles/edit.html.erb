<h2>Edit page</h2>
<%= form_for :article, method: :put, url: article_path(@article) do |f| %>
	<p>
	   <% if @article && @article.errors.any? %>
	
		<ul>
           <% @article.errors.full_messages.each do |err| %>
              <li style="color: red;"><%= err %></li>
              <% end %>  
   		</ul>
   	<% end %>  
   	 </p>
	<p>
	   <%=f.label :title %><br/>
	   <%=f.text_field :title, value: @article.title %><br/>
	</p>
	<p>
	   <%=f.label :text %><br/>
	   <%=f.text_area :text, value: @article.text %>
	</p>
	<p>
	   <%=f.submit %>
	</p>
	<p>
		 <%=link_to 'Delete', article_path(@article.id), method: :delete,
       data: { confirm: 'Are You Sure?' } %><br/>
	</p>

<% end %>


