<h1>Show Page</h1>
<h2><%=@article.title %></h2>
<p>
	<%=@article.text %>
</p><hr/>
<!-- add comment form -->
<h2>Add Comment</h2>
<p>
	<%= form_for([ @article, @article.comments.build ]) do |f| %>
	<p>

	   <%=f.label :author %><br/>
	   <%=f.text_field :author %><br/>
	</p>
	<p>
	   <%=f.label :body %><br/>
	   <%=f.text_area :body %>
	</p>
	<p>
	   <%=f.submit %>
	</p>

<% end %>
</p>