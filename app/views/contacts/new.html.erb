<h2> <%= t('contacts.contact_us') %></h2>

<%=form_for :contact, url: contacts_path do |f| %>
   <p style="color: red;">

   	  <% if @contact && @contact.errors.any? %> 
   	      <ul>
   	       <% @contact.errors.full_messages.each do |err| %>
   	          <li><%=err %></li>
   	       <% end %>
   	      </ul> 
   	     <% end %> 
   </p>
   <p>
	 <%=f.label :email %><br/>
	 <%=f.email_field :email %>
   </p>
   <p>
	 <%=f.label :text %><br/>
	 <%=f.text_area :text %>
   </p>
   <p>
	 <%=f.submit 'Send Message' %>
	</p>

<% end %>